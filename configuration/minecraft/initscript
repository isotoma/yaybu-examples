### BEGIN INIT INFO
# Provides:             minecraft
# Required-Start:       $remote_fs $syslog
# Required-Stop:        $remote_fs $syslog
# Default-Start:        2 3 4 5
# Default-Stop:
# Short-Description:    Minecraft Server
### END INIT INFO

set -e

# /etc/init.d/minecraft: start and stop the Minecraft Server

test -x {{ path }}/minecraft_server.jar || exit 1

umask 022

. /lib/lsb/init-functions

case "$1" in
  start)
    sudo -u {{ user }} screen -dmS minecraft -- {{ path }}/server.sh
    ;;

  stop)
    sudo -u {{ user }} screen -S minecraft -X stuff "stop\n"
    ;;

  status)
    nc -z localhost 25565
    exit $?
    ;;

  *)
    log_action_msg "Usage: /etc/init.d/minecraft {start|stop|status}"
    exit 1
esac

exit 0

